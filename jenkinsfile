pipeline {
    agent any

    environment {
       IMAGE_NAME = 'ashashrain/jenkins_nodejs3'
       IMAGE_TAG = 'latest'
       DOCKERHUB_SECRETS = credentials('dockerhub_token')  
       
    }

    stages {
        stage('clone from SCM') {
            steps {
                git url: 'https://github.com/nowashrain/jenkins_fastapi.git', branch: 'main'
            }
        }

        stage('Logging into Docker Hub') {
            steps {
                // Docker Hub 로그인
                sh '''
                echo ${DOCKERHUB_SECRETS_PSW} | docker login -u ${DOCKERHUB_SECRETS_USR} --password-stdin
                '''
            }
        }
        
        stage('Push Docker Hub') {
            steps {
                // Docker 이미지 푸시
                sh '''
                docker tag nowashrain/nodejs-app ${IMAGE_NAME}:${IMAGE_TAG}
                docker push ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }

        stage('Docker Hub logout') {
            steps {
                // Docker Hub 로그아웃
                sh '''
                docker logout
                '''
            }
        }
    }
}
